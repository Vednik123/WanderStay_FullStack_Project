<% layout("/layouts/boilerplate") %>


    <div class="row">
        <h3 class="col-md-6 offset-3">Login to WanderStay</h3><br><br>
        <div class="col-md-6 offset-3">
            <form action="/login" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" class="form-control" required id="username">
                    <div class="invalid-feedback">Please enter the Username</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" required id="password">
                    <div class="invalid-feedback">Please enter the Password</div>
                </div>
                <button class="btn btn-success">Login</button>
            </form>
        </div>
    </div>